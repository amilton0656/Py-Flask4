sudo docker build -t meu-app-simples .

sudo docker run --name meu-container-web -d -p 80:5000 meu-app-simples

docker exec -it meu-container-web bash


sudo apt update
sudo apt install python3 python3-pip python3-venv apache2 libapache2-mod-wsgi-py3

python3 -m venv venv
source venv/bin/activate
pip install -r requirements.txt

